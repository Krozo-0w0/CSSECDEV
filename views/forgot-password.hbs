<div class="centerBox">
  <div class="childContainer borderDefault">
    <div class="loginTitle">
      <img src="/images/RESERVER (1).png">
    </div>
    <hr class="borderDefault">

    <div id="errorContainer">
      {{errMsg}}
    </div>

    <form action="/forgot-password-init" method="post" id="forgotPasswordForm">
      <input class="inputBox" type="email" placeholder="Enter your DLSU email" name="email" id="email" required>
      <input class="button" type="submit" value="Verify Security Questions">
    </form>

    <hr class="borderDefault">
    <h4><a href="/">Back to Login</a></h4>
  </div>
</div>

<script src="/js/forgot-password.js"></script>